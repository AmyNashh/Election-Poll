<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.example.amynashamy.electionpoll.StatOption"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Stats"
        android:textColor="#080937"
        android:id="@+id/button1"
        android:background="@drawable/greenbutton"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Polling Info"
        android:textColor="#080937"
        android:id="@+id/button2"
        android:background="@drawable/pinkbutton"
        android:layout_above="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:padding="16dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check count"
        android:textColor="#080937"
        android:id="@+id/button3"
        android:background="@drawable/greenbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:padding="16dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Would you like to?"
        android:id="@+id/textView4"
        android:textColor="#080937"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/button1"
        android:layout_gravity="center"
        android:typeface="serif"
        />

</RelativeLayout>