<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:shrinkColumns="*"
    android:focusable="true"
    tools:context=".QuestionPage1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Answer all questions"
        android:id="@+id/textView6"
        android:textColor="#080937"
        android:layout_above="@+id/textView7"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you"
        android:textColor="#080937"
        android:id="@+id/textView1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/group1"
        android:orientation="horizontal">


    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/radioButton1"
        android:layout_weight="1" />

    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/radioButton2"
        android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do you have children"
        android:textColor="#080937"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/group2"
        android:orientation="horizontal">


    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/radioButton7"
        android:layout_weight="1" />

    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/radioButton8"
        android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you"
        android:textColor="#080937"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/group3"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Married"
            android:id="@+id/radioButton3"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Single"
            android:id="@+id/radioButton4"
            android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you a first time voter?"
        android:id="@+id/textView4"
        android:textColor="#080937"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/group4"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/radioButton10"
            android:layout_weight="1" />

    </RadioGroup>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you a member of a party"
        android:id="@+id/textView5"
        android:textColor="#080937"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/group5"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/radioButton5"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/radioButton6"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button1"
        android:textColor="#080937"
        android:background="@drawable/pinkbutton"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"/>

</LinearLayout>